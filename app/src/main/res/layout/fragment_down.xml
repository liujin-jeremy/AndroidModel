<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <Button
          android:id="@+id/down"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="down"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>
      <Button
          android:id="@+id/delete"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="delete"
          app:layout_constraintStart_toEndOf="@+id/down"
          app:layout_constraintTop_toTopOf="parent"/>
      <Button
          android:id="@+id/getFile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="getFile"
          app:layout_constraintStart_toEndOf="@+id/delete"
          app:layout_constraintTop_toTopOf="parent"/>
      <Button
          android:id="@+id/diskDown"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="down"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/down"/>
      <Button
          android:id="@+id/diskDelete"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="delete"
          app:layout_constraintStart_toEndOf="@+id/diskDown"
          app:layout_constraintTop_toBottomOf="@+id/delete"/>
      <Button
          android:id="@+id/diskGet"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="getFile"
          app:layout_constraintStart_toEndOf="@+id/diskDelete"
          app:layout_constraintTop_toBottomOf="@+id/getFile"/>

</android.support.constraint.ConstraintLayout>